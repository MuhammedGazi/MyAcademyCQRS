@model GetProductByIdQueryResult
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Girişi</h1>

<form method="post">
    <input type="hidden" asp-for="Id"/>

    <label>Ürün Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />

    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />

    <label>Kategori</label>
    <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
        <option value="">Lütfen Kategori Seçiniz</option>
    </select>
    <br />

    <button class="btn btn-dark">Güncelle</button>
</form>





